@page
@model MassPersona_Media_Review.Pages.Reviews.DeleteModel
@{ 
    ViewData["Title"] = "Delete";
}

<h3 class="mb-4">@ViewData["Title"]</h3>
<hr/> 
<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Reviews.Id" />
                    <div class="mb-3">
                        <label asp-for="Reviews.Title" class="form-label"></label>
                        <input asp-for="Reviews.Title" class="form-control" maxlength="25" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Reviews.Category" class="form-label"></label>
                        <input value="@Model.Reviews.Category" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Reviews.ReviewText" class="form-label"></label>
                        <textarea asp-for="Reviews.ReviewText" class="form-control" rows="5" maxlength="100" readonly></textarea>
                    </div>    
                    <div class="mb-4">
                        <label asp-for="Reviews.Rating" class="form-label"></label>
                        <input asp-for="Reviews.Rating" class="form-control" type="number" min="1" max="5" readonly />
                    </div>
                    <div class="d-flex">
                        <input type="submit" value="Delete" class="btn btn-danger" style="padding-right: 10px;" />
                        <a asp-page="Home" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
