@page
@model MassPersona_Media_Review.Pages.Reviews.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h3>@ViewData["Title"]</h3>
<hr/> 
<div class="row shadow">
        <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Reviews.Title" class="control-label"></label>
                <input asp-for="Reviews.Title" class="form-control" maxlength="25"/>
                <span asp-validation-for="Reviews.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reviews.Category" class="control-label"></label>
                <select asp-for="Reviews.Category" class="form-control" asp-items="Model.CategoryList">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Reviews.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reviews.ReviewText" class="control-label"></label>
                <textarea asp-for="Reviews.ReviewText" class="form-control" rows="5" maxlength="50"></textarea>
                <span asp-validation-for="Reviews.ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reviews.Rating" class="control-label"></label>
                <input asp-for="Reviews.Rating" class="form-control" type="number" min="1" max="5" />
                <span asp-validation-for="Reviews.Rating" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Home" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}