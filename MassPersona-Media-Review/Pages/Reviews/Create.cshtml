@page
@model MassPersona_Media_Review.Pages.Reviews.CreateModel
@{
    ViewData["Title"] = "Create Review";
}

<h3 class="mb-4">@ViewData["Title"]</h3>
<hr/> 
<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Reviews.Title" class="form-label"></label>
                        <input asp-for="Reviews.Title" class="form-control" maxlength="100" />
                        <span asp-validation-for="Reviews.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Reviews.Category" class="form-label"></label>
                        <select asp-for="Reviews.Category" class="form-select" asp-items="Model.CategoryList">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="Reviews.Category" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Reviews.ReviewText" class="form-label"></label>
                        <textarea asp-for="Reviews.ReviewText" class="form-control" rows="5" maxlength="1000"></textarea>
                        <span asp-validation-for="Reviews.ReviewText" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Reviews.Rating" class="form-label"> Rating (1 to 5)</label>
                        <input asp-for="Reviews.Rating" class="form-control" type="number" min="1" max="5" />
                        <span asp-validation-for="Reviews.Rating" class="text-danger"></span>
                    </div>
                    <div class="d-flex">
                        <input type="submit" value="Create" class="btn btn-primary" style="padding-right: 10px;"/>
                        <a asp-page="Home" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}